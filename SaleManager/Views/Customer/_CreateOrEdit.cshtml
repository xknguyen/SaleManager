        @(Html.EditorFor(model => model.Address, new
    {
        htmlAttributes = new
        {
            @class = "form-control",
        }
    }))
        @(Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" }))
    </div>
</div>

<div class="form-group">
    @(Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label col-md-2" }))
